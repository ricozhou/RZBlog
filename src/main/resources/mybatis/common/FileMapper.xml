<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rzblog.project.common.file.mapper.FileMapper">
	<resultMap type="com.rzblog.project.common.file.domain.FileDao"
		id="FileResult">
		<result property="id" column="id" />
		<result property="type" column="type" />
		<result property="url" column="url" />
		<result property="createDate" column="create_date" />
		<result property="objId" column="obj_id" />
	</resultMap>
	<select id="get" resultMap="FileResult">
		select
		id,type,url,obj_id,create_date
		from
		sys_file where id = #{value}
	</select>

	<select id="list" resultMap="FileResult">
		select `id`,`type`,`url`,`create_date`,`obj_id` from sys_file
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="type != null and type != ''"> and type = #{type} </if>
			<if test="url != null and url != ''"> and url = #{url} </if>
			<if test="objId != null and objId != ''"> and obj_id = #{objId} </if>
			<if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from sys_file
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="type != null and type != ''"> and type = #{type} </if>
			<if test="url != null and url != ''"> and url = #{url} </if>
			<if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
		</where>
	</select>

	<insert id="save" parameterType="com.rzblog.project.common.file.domain.FileDao">
		insert into sys_file
		(
		type,
		url,
		obj_id,
		create_date
		)
		values
		(
		#{type},
		#{url},
		#{objId},
		#{createDate}
		)
	</insert>

	<update id="update" parameterType="com.rzblog.project.common.file.domain.FileDao">
		update sys_file
		<set>
			<if test="type != null">`type` = #{type}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="createDate != null">`create_date` = #{createDate}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="remove">
		delete from sys_file where id = #{value}
	</delete>

	<delete id="removeByObjId">
		delete from sys_file where obj_id = #{value}
	</delete>

	<delete id="batchRemove">
		delete from sys_file where id in
		<foreach item="id" collection="array" open="(" separator=","
			close=")">
			#{id}
		</foreach>
	</delete>

</mapper>